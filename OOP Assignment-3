/* Design an educational Institution that maintains a database of all staff members where the database is segregated into a number of classes having hierarchical relationships. Define all classes with suitable data members and required member functions to build the database and fetch individual details .*/
//11.8.25

#include<iostream>
#include<string>
using namespace std;
class staff
{
protected:
	string name,dept;
	int id;
public:
	void accept();
	void display();
};
class teacher:public staff
{
	string subject;
	int xp;
public:
	void accept1();
	void display1();
};
class help:public staff
{
	string expert;
public:
	void accept2();
	void display2();
};
void staff::accept()
{
	cout<<"Enter your name: ";
	cin>>name;
	cout<<"\nEnter your ID: ";
	cin>>id;
	cout<<"\nEnter department: ";
	cin>>dept;
}
void staff::display()
{
	cout<<"Name: "<<name<<endl;
	cout<<"ID: "<<id<<endl;
	cout<<"Department: "<<dept<<endl;
}
void teacher::accept1()
{
	cout<<"***Teaching Staff***"<<endl;
	accept();
	cout<<"\nEnter your subject: ";
	cin>>subject;
	cout<<"\nEnter your Experience in years: ";
	cin>>xp;
}
void teacher::display1()
{
	cout<<"***Teaching Staff***"<<endl;
	cout<<"\n\n";
	display();
	cout<<"Subject: "<<subject<<endl;
	cout<<"Experience: "<<xp<<endl;
}
void help::accept2()
{
	cout<<"***Support Staff***"<<endl;
	accept();
	cout<<"\nEnter expertise: ";
	cin>>expert;
}
void help::display2()
{
	cout<<"***Support Staff***"<<endl;
	cout<<"\n\n";
	display();
	cout<<"Expertise: "<<expert<<endl;
}
int main()
{
	int n,m;
	cout<<"Enter no. of teaching staff:";
	cin>>n;
	teacher obj1[n];
	for (int i=0;i<n;i++)
	{
		obj1[i].accept1();
	}
	for (int k=0;k<n;k++)
	{
		obj1[k].display1();
	}
	cout<<"Enter no. of support staff:";
	cin>>m;
	help obj2[m];
	for (int j=0;j<m;j++)
	{
		obj2[j].accept2();
	}
	for (int l=0;l<m;l++)
	{
		obj2[l].display2();
	}
	return 0;
}


